<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Management</title>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <link rel="stylesheet" href="/css/Admin/order.css">
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
</head>

<body>
  <div class="dashboard-container">
    <!-- Sidebar -->
    <%- include('../partials/admin/sidebar') %>

      <!-- Main Content -->
      <main class="main-content">
        <header class="main-header">
          <h1>Order Management</h1>
          <button class="menu-toggle">☰</button>
        </header>

        <section class="content">
          <!-- Orders Table Section -->
          <div class="card mb-4">
            <div class="card-header">
              <div class="d-flex justify-content-between align-items-center">
                <span>Orders</span>
              </div>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-striped table-hover">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Username</th>
                      <th>Total Price</th>
                      <th>Shipping Address</th>
                      <th>Status</th>
                      <th>Products</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% orders.forEach((order, index)=> { %>
                      <tr>
                        <td>
                          <%= index + 1 + ((currentPage - 1) * limit) %>
                        </td>
                        <td>
                          <%= order.userId.fullName %>
                        </td>
                        <td>&#8377 <%= order.total %>
                        </td>
                        <td>
                          <%= order.address.firstName %>
                            <%= order.address.lastName %><br>
                              <%= order.address.address %>, <%= order.address.city %>, <%= order.address.state %> -
                                    <%= order.address.pincode %><br>
                                      Phone: <%= order.address.phoneNumber %>
                        </td>
                        <td>
                          <span class="badge <%= order.status === 'Delivered' ? 'bg-success' : 
                                                  order.status === 'Cancelled' ? 'bg-danger' :
                                                  order.status === 'Returned' ? 'bg-secondary' :
                                                  order.status === 'Shipped' ? 'bg-primary' :
                                                  order.status === 'Confirmed' ? 'bg-info' : 'bg-warning' %>">
                            <%= order.status %>
                          </span>
                          <% if (order.status==='Cancelled' || order.status==='Returned' ) { %>
                            <br><small class="text-muted">Final Status</small>
                            <% } %>
                        </td>
                        <td>
                          <% order.products.forEach(product=> { %>
                            <div class="mb-1">
                              <%= product.name %>
                                <small class="badge bg-light text-dark">
                                  <%= product.status || 'Pending' %>
                                </small>
                            </div>
                            <% }) %>
                        </td>
                        <td>
                          <div class="mb-2">
                            <select class="form-select form-select-sm"
                              onchange="updateOrderStatus('<%= order._id %>', this.value)" <% if
                              (order.status==='Cancelled' || order.status==='Returned' ) { %>disabled<% } %>>
                                <% const allStatuses=['Pending', 'Confirmed' , 'Shipped' , 'Delivered' , 'Cancelled'
                                  , 'Returned' ]; const allowedStatuses=order.allowedStatuses || []; %>
                                  <% allStatuses.forEach(status=> { %>
                                    <option value="<%= status %>" <%=order.status===status ? 'selected' : '' %>
                                      <%= !allowedStatuses.includes(status) ? 'disabled' : '' %>>
                                        <%= status %>
                                    </option>
                                    <% }); %>
                            </select>
                            <% if (order.allowedStatuses && order.allowedStatuses.length> 1) { %>
                              <small class="text-muted d-block">
                                Can update to: <%= order.allowedStatuses.filter(s=> s !== order.status).join(', ') ||
                                  'None' %>
                              </small>
                              <% } %>
                          </div>
                          <div class="d-flex gap-1">
                            <button class="btn btn-sm btn-success" onclick="viewOrderDetails('<%= order._id %>')"
                              title="View Details">
                              <i class="fa fa-eye"></i>
                            </button>
                            <button class="btn btn-sm btn-danger" onclick="deleteOrder('<%= order._id %>')"
                              title="Delete Order">
                              <i class="fa fa-trash"></i>
                            </button>
                          </div>
                        </td>
                      </tr>
                      <script type="application/json" id="order-data-<%= order._id %>">
                      <%- JSON.stringify(order) %>
                    </script>
                      <% }) %>
                  </tbody>
                </table>
              </div>
              <!-- Pagination Controls -->
              <div class="pagination-controls d-flex justify-content-center my-3">
                <% if (totalPages> 1) { %>
                  <% if (currentPage> 1) { %>
                    <button onclick="loadPage('<%= currentPage - 1 %>')"
                      class="btn btn-primary mx-1 my-1">&laquo;</button>
                    <% } %>
                      <% for (let i=1; i <=totalPages; i++) { %>
                        <button onclick="loadPage('<%= i %>')"
                          class="btn <%= i === currentPage ? 'btn-secondary' : 'btn-light' %> mx-1">
                          <%= i %>
                        </button>
                        <% } %>
                          <% if (currentPage < totalPages) { %>
                            <button onclick="loadPage('<%= currentPage + 1 %>')"
                              class="btn btn-primary mx-1 my-1">&raquo;</button>
                            <% } %>
                              <% } %>
              </div>
            </div>
          </div>
        </section>
      </main>
  </div>

  <div class="modal fade" id="orderDetailsModal" tabindex="-1" aria-labelledby="orderDetailsModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-xl">
      <div class="modal-content">
        <div class="modal-header bg-primary text-white">
          <h5 class="modal-title" id="orderDetailsModalLabel">Order Details</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" id="orderDetailsBody">
          <!-- Order Summary Section -->
          <div class="row mb-4">
            <div class="col-md-6">
              <div class="card">
                <div class="card-header bg-light">
                  <h6 class="mb-0"><i class="fa fa-shopping-cart"></i> Order Summary</h6>
                </div>
                <div class="card-body">
                  <p><strong>Order Date:</strong> <span id="modal-order-date"></span></p>
                  <p><strong>Status:</strong> <span id="modal-order-status" class="badge"></span></p>
                  <p><strong>Total Amount:</strong> ₹ <span id="modal-order-total"></span></p>
                  <p><strong>Total Discount:</strong> ₹ <span id="modal-order-discount"></span></p>
                  <p><strong>Payment Method:</strong> <span id="modal-payment-method"></span></p>
                  <p><strong>Payment Status:</strong> <span id="modal-payment-status" class="badge"></span></p>
                  <p id="modal-refunded-total-row" style="display: none;"><strong>Refunded Total:</strong> ₹ <span
                      id="modal-refunded-total"></span></p>
                  <p id="modal-delivery-date-row" style="display: none;"><strong>Delivery Date:</strong> <span
                      id="modal-delivery-date"></span></p>
                </div>
              </div>
            </div>
            <!-- Delivery Address Section -->
            <div class="col-md-6">
              <div class="card">
                <div class="card-header bg-light">
                  <h6 class="mb-0"><i class="fa fa-map-marker"></i> Delivery Address</h6>
                </div>
                <div class="card-body">
                  <p><strong>Name:</strong> <span id="modal-address-name"></span></p>
                  <p><strong>Phone:</strong> <span id="modal-address-phone"></span></p>
                  <p><strong>Address:</strong> <span id="modal-address-full"></span></p>
                  <p><strong>City:</strong> <span id="modal-address-city"></span></p>
                  <p><strong>State:</strong> <span id="modal-address-state"></span></p>
                  <p><strong>Pincode:</strong> <span id="modal-address-pincode"></span></p>
                </div>
              </div>
            </div>
          </div>
          <!-- Products Section -->
          <div class="card">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
              <h6 class="mb-0"><i class="fa fa-list"></i> Ordered Products</h6>
              <small class="text-muted">
                <i class="fa fa-info-circle"></i>
                Individual product status updates follow progression rules
              </small>
            </div>
            <div class="card-body">
              <div id="modal-products-list">
                <!-- Products will be dynamically added here -->
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/admin/order.js"></script>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
</body>

</html>