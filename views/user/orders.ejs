    <title>Address Management</title>
</head>

<body>

    <!-- header -->
    <%- include('../partials/user/header') %>

        <div class="user-account-container">
            <!-- Sidebar -->
            <aside class="sidebar-1">
                <h2>Account</h2>
                <nav>
                    <ul>
                        <li><a href="/user/profile">User Profile</a></li>
                        <li><a href="/user/address">Address</a></li>
                        <li><a href="/user/orders">Orders</a></li>
                        <li><a href="/user/wallet">Wallet</a></li> <!-- Added Wallet link -->
                        <li><a href="logout.html">Logout</a></li>
                    </ul>
                </nav>
            </aside>


            <div class="content">
                <div class="address-card-container">
                    <% if (orders.length > 0) { %>
                        <% orders.forEach(order => { %>
                            <div class="order-card mb-3 p-3 border rounded d-flex">
                                <div class="order-images mr-3">
                                    <% order.products.forEach(product => { %>
                                        <div class="product-image-container">
                                            <img src="<%= product.productId.images[2] %>" alt="Product Image">
                                        </div>
                                    <% }) %>
                                </div>
                                <div class="order-details">
                                    <% order.products.forEach(product => { %>
                                        <div class="product-detail mb-3" data-orderid="<%= order._id %>"
                                            data-productid="<%= product.productId._id %>">
                                            <p><strong>Product Name:</strong> <%= product.productId.name %></p>
                                            <p><strong>Price:</strong> $<%= product.productId.price %></p>
                                            <p><strong>Quantity:</strong> <%= product.quantity %></p>
            
                                            <p><strong>Status:</strong> <%= order.isCancelled ? "Cancelled" : order.status %></p>
            
                                            <div class="actions">
                                                <!-- "View more" button always visible -->
                                                <button class="btn btn-primary view-more" data-toggle="modal"
                                                    data-target="#productDetailsModal" data-order='<%= JSON.stringify(order) %>'
                                                    onclick="showProductDetails(this)">
                                                    View more
                                                </button>
            
                                                <% if (order.status === 'Delivered') { %>
                                                    <!-- Show "Return Product" if delivered -->
                                                    <button class="btn btn-primary" onclick="returnProduct('<%= order._id %>')">
                                                        Return Product
                                                    </button>
                                                <% } else if (order.status !== 'Cancelled' && order.status !== 'Returned') { %>
                                                    <!-- Show "Cancel Product" if not cancelled or returned -->
                                                    <button class="btn btn-danger cancel-order"
                                                        onclick="cancelOrderProduct('<%= order._id %>', '<%= product.productId._id %>', '<%= order.total %>')">
                                                        Cancel Product
                                                    </button>
                                                <% } %>
                                            </div>
                                        </div>
                                    <% }) %>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p>No orders found.</p>
                    <% } %>
                </div>
            </div>


        </div>
        </div>

        </div>
        <div class="modal fade" id="productDetailsModal" tabindex="-1" role="dialog"
            aria-labelledby="productDetailsModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="productDetailsModalLabel">Product Details</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body" id="modalContent">
                        <!-- Content will be added by JavaScript -->
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        <script src="/css/User/vendor/jquery/jquery-3.2.1.min.js"></script>
        <script src="/css/User/vendor/animsition/js/animsition.min.js"></script>
        <script src="/css/User/vendor/bootstrap/js/popper.js"></script>
